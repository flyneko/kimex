extends layouts/_cabinet.pug
block title 
    |    Личный кабинет - История покупок

block inner 
    .lk-history
        .lk-history__inner
            h1.subtitle истории покупок
            ul.lk-history__items
                each key, val in {'processing': 'Обрабатывается', 'done': 'Доставлен', 'deny': 'Отменен'}
                    li.lk-history__item
                        .lk-history__item-left
                            .lk-history__item-number
                                p.lk-history__item-text Номер заказа: 
                                    span № 233122
                                p.lk-history__item-text Дата заказа: 
                                    span 03.11.2020
                            p.lk-history__item-text.lk-history__item-text--mobile Кол-во товаров: 
                                span 5
                            p.lk-history__item-text.lk-history__item-text--mobile-status Статус заказа: 
                                span(class="lk-history__item-status lk-history__item-status--" + key) #{val}
                            ul.lk-history__item-added.lk-added
                                li.lk-added__item
                                    a.lk-added__link(href='#')
                                        img(src='temp/novelty-week-2.jpg')
                                li.lk-added__item
                                    a.lk-added__link(href='#')
                                        img(src='temp/novelty-week-3.jpg')
                                li.lk-added__item
                                    a.lk-added__link(href='#')
                                        img(src='temp/novelty-week-5.jpg')
                                p.lk-added__more Ещё
                                    br
                                    | 2 товара
                            .lk-history__item-delivery
                                p.lk-history__item-text Адрес доставки: 
                                    span Астана, Володарского , д. 157, 90
                                p.lk-history__item-text Получатель: 
                                    span Алексей Заморин, тел. +7 (924) 232-10-74
                                p.lk-history__item-text--mobile 3 товара на сумму: 
                                    span 90 900 ₸
                        .lk-history__item-right
                            .lk-history__item-additional
                                p.lk-history__item-text Статус заказа: 
                                    span(class="lk-history__item-status lk-history__item-status--" + key) #{val}
                                p.lk-history__item-text 3 товара на сумму: 
                                    span 90 900 ₸
                            button.lk-history__item-btn.lk-history__item-btn--opened(type='button')
                