.page-filter
    .page-filter__top
        .page-filter__top-left
            ul.breadcrumbs
                li.breadcrumbs__item
                    a.breadcrumbs__content(href='#') Женская 
                li.breadcrumbs__item
                    span.breadcrumbs__content Одежда
            h1.page-filter__title Одежда
