                option Цена по возрастанию
                option Цена по убыванию
                option Со скидками
                option По новизне
    form.page-filter__bottom
        ul.page-filter__list
            li.page-filter__item
                optgroup.page-filter__select.select.select--no-search.select-price
                    option(
                        selected='selected'
                    )
                        | Цена
                    option(
                        disabled='disabled'
                    )
                        | Цена2
            li.page-filter__item
                select.page-filter__select.select-filter--multiple(
                    multiple="multiple"
                    data-placeholder="Цвет"
                )
                    option 
                        span(style='background-color: #e5d8d2;')             
