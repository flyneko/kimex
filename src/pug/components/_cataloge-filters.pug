            li.page-filter__item
                select.page-filter__select.select-filter--multiple(
                    multiple="multiple"
                    data-placeholder="Бренд"
                    selection-css-class='select-filter--brand'
                    data-dropdown-css-class='select-filter--brand-dropdown'
                )
                    option Цена3
                    option Цена3
            li.page-filter__item
                select.page-filter__select.select-filter--multiple(
                    multiple="multiple"
                    data-placeholder="Размер"
                )
                    option Цена2               
                    option Цена3
            li.page-filter__item
                select.page-filter__select.select-filter--multiple(
                    multiple="multiple"
                    data-placeholder="Тип"
                )
                    option Цена2               
                    option Цена3     
